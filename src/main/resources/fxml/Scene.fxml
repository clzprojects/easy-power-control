<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.developerbhuwan.easypowercontrol.SceneController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="357.0" spacing="10.0" styleClass="quick_button_bar" stylesheets="@../styles/Styles.css" AnchorPane.leftAnchor="0.0">
         <children>
            <Label text="Quick |" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="24.0" />
               </font>
            </Label>
            <Button fx:id="shutdownButton" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0" styleClass="shutdown_button" stylesheets="@../styles/Styles.css" />
            <Button fx:id="hibernateButton" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0" styleClass="hibernate_button" stylesheets="@../styles/Styles.css" />
            <Button fx:id="restartButton" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0" styleClass="restart_button" stylesheets="@../styles/Styles.css" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutY="100.0" prefHeight="100.0" prefWidth="357.0" spacing="10.0" stylesheets="@../styles/Styles.css">
         <children>
            <Label text="Timer |" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="24.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <ComboBox fx:id="hourComboBox" prefHeight="25.0" prefWidth="74.0" />
                  <ComboBox fx:id="minuteComboBox" prefHeight="25.0" prefWidth="74.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <ComboBox fx:id="timerOperation" prefHeight="25.0" prefWidth="101.0" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="setTimerButton" mnemonicParsing="false" prefHeight="24.0" prefWidth="24.0" styleClass="set_button" stylesheets="@../styles/Styles.css" />
                        <Button fx:id="cancelTimerButton" mnemonicParsing="false" prefHeight="24.0" prefWidth="24.0" styleClass="cancel_button" stylesheets="@../styles/Styles.css" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <styleClass>
            <String fx:value="quick_button_bar" />
            <String fx:value="timer_button_bar" />
         </styleClass>
      </HBox>
      <HBox alignment="CENTER" layoutY="200.0" prefHeight="35.0" prefWidth="357.0" style="-fx-background-color: #000;">
         <children>
            <Label fx:id="copyrightLinkLabel" text="Copyright (C) 2014 www.bhuwanupadhyay.com.np" textFill="#868282" />
         </children>
      </HBox>
   </children>
</AnchorPane>
